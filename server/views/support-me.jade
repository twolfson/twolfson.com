extend layout

block config
  - var page = 'support-me';
  - var title = 'Todd Wolfson - Support me';
  - var seoKeywords = 'Todd Wolfson, twolfson, twolfsn, support me, paypal, bitcoin';
  - var seoDescription = 'Support Todd Wolfson via Bitcoin and PayPal';

  //- TODO: Remove `navMargin` altogether by making design consistent
  - locals.navMargin = false;

block content
  .container__row
    .width12
      h2.text--center.soft-half--top.flush--bottom Support me
      p
        = "Support me and "
        a(href="/projects")= "my open source projects"
        = " by donating via one of the methods below:"
  .container__row.flexbox.push--bottom
    .flexbox__item.width2
      img.valign--text-bottom(src="/public/images/support/patreon.png", alt="Patreon logo")
      = " Patreon"
    .flexbox__item.width10
      a(href=supportUrls.patreon)
        button.btn.btn--medium Send donation via Patreon
  .container__row.flexbox.push--bottom
    .flexbox__item.width2
      img.valign--text-bottom(src="/public/images/support/paypal.png", alt="PayPal logo")
      = " PayPal"
    .flexbox__item.width10
      a(href=supportUrls.paypal)
        button.btn.btn--medium Send donation via PayPal
  .container__row.flexbox.push-double--bottom
    .flexbox__item.width2
      img.valign--text-bottom(src="/public/images/support/bitcoin.png", alt="Bitcoin logo")
      = " Bitcoin"
    .flexbox__item.width10
      pre.flush--bottom
        code.no-highlight= supportUrls.bitcoin
  .container__row.push--bottom
    .width12
      p
        = "Don't see a donation method you can use? Please tell me at "
        a(href="mailto:todd+support-me@twolfson.com") todd+support-me@twolfson.com
